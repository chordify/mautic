							<td align="center" valign="middle" width="34" style="font-size:0;width:34px!important;">
								<a href="https://www.twitter.com/chordify"><img src="{{ getAssetUrl('themes/'~template~'/img/flat-color-round-twitter.png', null, null, true) }}" border="0" width="34" style="display: block; border: none;" /></a>
